<div class="container col-8">  

  <%= render 'shared/errors', obj: @user %>

  <%= form_with(model: @user, class: "shadow mb-3 bg-info p-3 bg-body-tertiary rounded", local: true) do  |f| %>

    <%= f.label :username, class:"form-label text-light" %>
    <%= f.text_field :username, class: "form-control mb-3 shadow rounded", placeholder: "Enter a username" %>
    
    <%= f.label :email, class: "form-label text-light" %>
    <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email adderss" %>

    <%= f.label :password, class: "form-label text-light" %>
    <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>

    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg mt-3") %>

  <% end %>
  <div class="mb-4 bottom-part">
    <%= link_to '[ Cancel and return to articles listing ]', users_path, class: "mt-3 text-info" %>
  </div>
</div>


