<div class="container col-8">  
  <%= render 'shared/errors' %>

  <%= form_with(model: @article, class: "shadow mb-3 bg-info p-3 bg-body-tertiary rounded", local: true) do  |f| %>

    <%= f.label :title, class:"form-label text-light" %>
    <%= f.text_field :title, class: "form-control mb-3 shadow rounded", placeholder: "Title of the article" %>
    
    <%= f.label :description, class: "form-label text-light" %>
    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the article" %>

    <%= f.submit class: "btn btn-outline-light btn-lg mt-3" %>

  <% end %>
  <div class="mb-4 bottom-part">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "mt-3 text-info" %>
  </div>
</div>


