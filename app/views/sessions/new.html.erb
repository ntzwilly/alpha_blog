<h1 class="text-center mt-4">Log in</h1>

<div class="container col-8">  

  <%= form_with(scope: :session, url: login_path, class: "shadow mb-3 bg-info p-3 bg-body-tertiary rounded", local: true) do  |f| %>

    <%= f.label :email, class: "form-label text-light" %>
    <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email adderss" %>

    <%= f.label :password, class: "form-label text-light" %>
    <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>

    <%= f.submit "login", class: "btn btn-outline-light btn-lg mt-3" %>

  <% end %>
  <div class="mb-4 bottom-part">
    <%= link_to '[ Cancel and return to articles listing ]', users_path, class: "mt-3 text-info" %>
  </div>
</div>


